<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xxx="using:plc_soldier_avalonia.Model"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="540"
        x:Class="plc_soldier_avalonia.MainWindow"
        RequestedThemeVariant="Light"
        Title="plc_soldier_avalonia">
  
  <Grid>
    <Grid.RowDefinitions>
      <!-- Menu-template -->
      <RowDefinition Height="20"/>
      <!-- Tools-template -->
      <RowDefinition Height="100" MinHeight="50"/>
      <!-- Splitter-template -->
      <RowDefinition Height="1" MaxHeight="1"/>
      <!-- Main-space-template -->
      <RowDefinition Height="*" MinHeight="300" />
    </Grid.RowDefinitions>

    <!-- Menu -->
    <Grid Grid.Row="0">
      <Menu VerticalAlignment="Top" Grid.Row="0">
        <MenuItem Header="File">
          <MenuItem Header="New Project" />
          <MenuItem Header="Open Project" />
          <Separator />
          <MenuItem Header="Exit" Click="Exit_Click" />
        </MenuItem>
        <MenuItem Header="Edit"></MenuItem>
        <MenuItem Header="View">
          <MenuItem Header="Solution Explorer" Click="Solution_Click" />
          <MenuItem Header="Workspace" />
          <MenuItem Header="Console" Click="Console_Click" />
        </MenuItem>
        <MenuItem Header="Search"></MenuItem>
        <MenuItem Header="Logic"></MenuItem>
        <MenuItem Header="Communications"></MenuItem>
        <MenuItem Header="Tools"></MenuItem>
        <MenuItem Header="Window"></MenuItem>
        <MenuItem Header="Help"></MenuItem>
      </Menu>
    </Grid>

    <!-- Tools -->
    <Grid Grid.Row="1">

    </Grid>

    <!-- Splitter -->
    <GridSplitter Grid.Row="2"
                  Background="Black"
                  ResizeDirection="Rows"
                  ResizeBehavior="PreviousAndNext"
                  HorizontalAlignment="Stretch"/>

    <!-- Main-space -->
    <Grid Grid.Row="3">
      <Grid.ColumnDefinitions>
        <!-- Solution-explorer-template -->
        <ColumnDefinition Width="300" MinWidth="150"/>
        <!-- Splitter-template -->
        <ColumnDefinition Width="1" MaxWidth="1"/>
        <!-- Right-space-template -->
        <ColumnDefinition Width="*" MinWidth="150" />
      </Grid.ColumnDefinitions>

      <!-- Solution-explorer -->
      <Grid Grid.Column="0">
        <DockPanel>
          <TabControl BorderBrush="Black" BorderThickness="1" Name="LeftSpace">
            <TabControl.Styles>
              <Style Selector="TabItem">
                <Setter Property="HeaderTemplate">
                  <Setter.Value>
                    <DataTemplate x:DataType="xxx:LeftTabItem">
                      <DockPanel>
                        <Button DockPanel.Dock="Right" 
                                Click="Delete_Click"
                                Height="15"
                                Width="15"
                                FontSize="10"
                                Margin="10 0 0 0"
                                VerticalAlignment="Center"
                                Padding="4 0 0 0">x</Button>
                        <TextBlock DockPanel.Dock="Left"
                                   Text="{Binding Title}"
                                   FontSize="15"
                                   FontFamily="Arial"
                                   VerticalAlignment="Center" />
                      </DockPanel>
                    </DataTemplate>
                  </Setter.Value>
                </Setter>
                <Setter Property="ContentTemplate">
                  <Setter.Value>
                    <DataTemplate x:DataType="xxx:LeftTabItem">
                      <TextBlock Text="{Binding Content}"/>
                    </DataTemplate>
                  </Setter.Value>
                </Setter>
                <Setter Property="MinHeight" Value="30" />
              </Style>
            </TabControl.Styles>
          </TabControl>
        </DockPanel>
      </Grid>

      <!-- Splitter -->
      <GridSplitter Grid.Column="1"
                    Background="Black"
                    ResizeDirection="Columns"
                    ResizeBehavior="PreviousAndNext"
                    HorizontalAlignment="Stretch"/>

      <!-- Right-space -->
      <Grid Grid.Column="2">
        <Grid.RowDefinitions>
          <!-- Workspace-template -->
          <RowDefinition Height="*" MinHeight="100"/>
          <!-- Splitter-template -->
          <RowDefinition Height="1" MaxHeight="1"/>
          <!-- Console-template -->
          <RowDefinition Height="150" MinHeight="100"/>
        </Grid.RowDefinitions>

        <!-- Workspace -->
        <Grid Grid.Row="0">
          
        </Grid>

        <!-- Splitter -->
        <GridSplitter Grid.Row="1"
                      Background="Black"
                      ResizeDirection="Rows"
                      ResizeBehavior="PreviousAndNext"
                      HorizontalAlignment="Stretch"/>

        <!-- Console -->
        <Grid Grid.Row="2">
          <DockPanel>
            <TabControl BorderBrush="Black" BorderThickness="1" Name="BottomSpace">
              <TabControl.Styles>
                <Style Selector="TabItem">
                  <Setter Property="HeaderTemplate">
                    <Setter.Value>
                      <DataTemplate x:DataType="xxx:BottomTabItem">
                        <DockPanel>
                          <Button DockPanel.Dock="Right" Click="Delete_Click">X</Button>
                          <TextBlock DockPanel.Dock="Right" Text="{Binding Title}"></TextBlock>
                        </DockPanel>
                      </DataTemplate>
                    </Setter.Value>
                  </Setter>
                  <Setter Property="ContentTemplate">
                    <Setter.Value>
                      <DataTemplate x:DataType="xxx:BottomTabItem">
                        <TextBlock Text="{Binding Content}"/>
                      </DataTemplate>
                    </Setter.Value>
                  </Setter>
                </Style>
              </TabControl.Styles>
            </TabControl>
          </DockPanel>
        </Grid>
      </Grid>
    </Grid>
  </Grid>
</Window>
